{
  "name": "recipe-ingredient-parser-v2",
  "version": "1.0.2",
  "description": "Natural language parser for recipes and ingredient lists, incl. combining ingredients",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "build:test": "rm -rf testDist && tsc -p test/tsconfig.json",
    "lint": "tslint \"{./**/*.ts,./**/*.tsx}\" --exclude \"{./node_modules/**,./**/*.d.ts}\"",
    "prepublish": "npm run build",
    "test": "npm run build:test && NODE_ENV=test mocha testDist/test/**/*.js",
    "test:watch": "nodemon --ignore lib --ignore testDist -e ts,tsx -x 'npm run test --silent || true'",
    "test:ci": "npm run lint && npm test",
    "watch": "nodemon --watch src -e ts,tsx -x 'npm run build'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nsafai/recipe-parser.git"
  },
  "author": "Nicolai Safai <me@nicolaisafai.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nsafai/recipe-parser/issues"
  },
  "homepage": "https://github.com/nsafai/recipe-parser#readme",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/mocha": "^5.2.4",
    "chai": "^4.1.0",
    "mocha": "^5.2.0",
    "tslint": "^5.10.0",
    "typescript": "^2.4.2"
  },
  "dependencies": {
    "@types/natural": "^0.2.33",
    "@types/node": "^10.5.1",
    "natural": "^0.6.1"
  },
  "keywords": [
    "recipe",
    "parser",
    "ingredient",
    "combine",
    "units"
  ]
}
